<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingBottom="35dp"
        android:layout_margin="2dp"
        android:background="@drawable/form_border">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        android:text="This Email is already registered"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="How do you want to proceed further?"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/radioGroupAlreadyRegistered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/radioButtonReceivedOtponRegisteredNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Receive OTP on registered number" />

        <TextView
            android:id="@+id/uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/radioButtonReceivedOtponUpdatedNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Update/Register New number \nProfile Exists" />

        <EditText
            android:id="@+id/updatePhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:maxLines="1"
            android:hint="Updated Phone Number"
            android:textSize="15sp" />

    </RadioGroup>

    <Button
        android:id="@+id/btnSend1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/primary"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Send"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/primary"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Send"
        android:textColor="@color/white"
        android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>