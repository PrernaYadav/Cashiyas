<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="#FF9800">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/textView2111"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="account no"
                android:textColor="#ffffff" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/typesms"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="type"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView31111"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@mipmap/rupe"
                android:textColor="#ffffff"
                android:drawablePadding="2dp"
                android:text="amount" />

        </LinearLayout>

        <TextView
            android:gravity="end"
            android:id="@+id/textView4111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="date"
            android:textColor="#ffffff" />

    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edittext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/cat"
                android:hint="Category"
                android:textAlignment="center" />

        </LinearLayout>


        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbarAlwaysDrawHorizontalTrack="false"
                    android:scrollbarStyle="outsideInset">

                    <RadioGroup
                        android:id="@+id/radiocat"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio10"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:checked="true"
                            android:layout_marginLeft="10dp"
                            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                            android:text="Bills"
                            android:button="@null"
                            android:textAlignment="center"
                            android:textSize="10sp"/>


                        <RadioButton
                            android:id="@+id/radio11"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                            android:button="@null"
                            android:layout_marginLeft="10dp"
                            android:text="Food"
                            android:textAlignment="center"
                            android:textSize="10sp" />

                        <RadioButton
                            android:id="@+id/radio12"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                            android:button="@null"
                            android:layout_marginLeft="10dp"
                            android:text="Fuel"
                            android:textAlignment="center"
                            android:textSize="10sp" />

                        <RadioButton
                            android:id="@+id/radio13"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                            android:button="@null"
                            android:layout_marginLeft="10dp"
                            android:text="Groceries"
                            android:textAlignment="center"
                            android:textSize="10sp" />

                        <RadioButton
                            android:id="@+id/radio14"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                            android:button="@null"
                            android:layout_marginLeft="10dp"
                            android:text="Health"
                            android:textAlignment="center"
                            android:textSize="10sp" />

                        <RadioButton
                            android:id="@+id/radio15"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                            android:button="@null"
                            android:layout_marginLeft="10dp"
                            android:text="Shopping"
                            android:textAlignment="center"
                            android:textSize="10sp" />

                        <RadioButton
                            android:id="@+id/radio16"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                            android:button="@null"
                            android:layout_marginLeft="10dp"
                            android:text="Travel"
                            android:textAlignment="center"
                            android:textSize="10sp" />
                        <RadioButton
                            android:id="@+id/radio18"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                            android:button="@null"
                            android:layout_marginLeft="10dp"
                            android:text="Other"
                            android:textAlignment="center"
                            android:textSize="10sp" />

                        <RadioButton
                            android:id="@+id/radio17"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                            android:button="@null"
                            android:layout_marginLeft="10dp"
                            android:text="Entertainment"
                            android:textAlignment="center"
                            android:textSize="10sp" />

                    </RadioGroup>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#727272" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edittype"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableLeft="@mipmap/itm"
                    android:drawablePadding="3dp"
                    android:hint="where you have spent this money"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editamount"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableLeft="@mipmap/mny"
                    android:drawablePadding="3dp"
                    android:maxLength="7"
                    android:hint="amount"
                    android:inputType="number" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editdate"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableLeft="@mipmap/cal"
                    android:drawablePadding="3dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="date"
                    android:inputType="none"
                    android:textIsSelectable="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bodymessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/atm"
                    android:drawablePadding="3dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textColor="#000000"
                    android:inputType="none"
                    android:textIsSelectable="false" />

            </LinearLayout>


        <ImageView
            android:id="@+id/submitcat"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/submit"/>
            </LinearLayout>




    </LinearLayout>
</LinearLayout>
    </ScrollView>