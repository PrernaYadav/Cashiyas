<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:background="#FF9800"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="130dp"
                    android:text="Cash Spent"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"

                    android:src="@mipmap/rupee" />

                <TextView
                    android:id="@+id/cashspent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="8"
                    android:text="0" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:drawablePadding="3dp"
                        android:drawableLeft="@mipmap/cat"
                        android:hint="Category"
                        android:textAlignment="center"
                        />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbarAlwaysDrawHorizontalTrack="false"
                            android:scrollbarStyle="insideInset">

                            <RadioGroup
                                android:id="@+id/radio"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">




                                <RadioButton
                                    android:id="@+id/radio1"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginLeft="10dp"
                                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                                    android:text="Bills"
                                    android:button="@null"
                                    android:textAlignment="center"
                                    android:textSize="10sp"/>


                                <RadioButton
                                    android:id="@+id/radio2"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                                    android:button="@null"
                                    android:layout_marginLeft="10dp"
                                    android:text="Food"
                                    android:textAlignment="center"
                                    android:textSize="10sp" />

                                <RadioButton
                                    android:id="@+id/radio3"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"

                                    android:layout_marginLeft="10dp"
                                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                                    android:button="@null"
                                    android:text="Fuel"

                                    android:textAlignment="center"
                                    android:textSize="10sp" />




                                <RadioButton
                                    android:id="@+id/radio4"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginLeft="10dp"
                                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                                    android:button="@null"
                                    android:text="Groceries"

                                    android:textAlignment="center"
                                    android:textSize="10sp" />




                                <RadioButton
                                    android:id="@+id/radio5"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginLeft="10dp"
                                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                                    android:button="@null"

                                    android:text="Health"
                                    android:textAlignment="center"
                                    android:textSize="10sp" />

                                <RadioButton
                                    android:id="@+id/radio6"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginLeft="10dp"
                                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                                    android:button="@null"


                                    android:text="Shopping"
                                    android:textAlignment="center"
                                    android:textSize="10sp" />

                                <RadioButton
                                    android:id="@+id/radio7"

                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:button="@null"
                                    android:text="Travel"
                                    android:layout_marginLeft="10dp"
                                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                                    android:textAlignment="center"
                                    android:textSize="10sp" />

                                <RadioButton
                                    android:id="@+id/radio8"

                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                                    android:button="@null"
                                    android:layout_marginLeft="10dp"
                                    android:text="Other"

                                    android:textAlignment="center"
                                    android:textSize="10sp" />

                                <RadioButton
                                    android:id="@+id/radio9"

                                    android:layout_width="70dp"
                                    android:layout_height="60dp"
                                    android:layout_marginLeft="8dp"
                                    android:drawableTop="?android:attr/listChoiceIndicatorSingle"
                                    android:button="@null"
                                    android:text="Entertainment"

                                    android:textAlignment="center"
                                    android:textSize="10sp" />


                            </RadioGroup>
                        </HorizontalScrollView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:background="#727272" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/itemet"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawableLeft="@mipmap/itm"
                        android:drawablePadding="3dp"
                        android:inputType="textCapSentences"
                        android:hint="enter item"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/amntet"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawableLeft="@mipmap/mny"
                        android:drawablePadding="3dp"
                        android:maxLength="7"
                        android:hint="amount"
                        android:inputType="number" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/dateet"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawableLeft="@mipmap/cal"
                        android:drawablePadding="3dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="date"
                        android:inputType="none"
                        android:textIsSelectable="false" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="5dp"
                            android:drawableLeft="@mipmap/info"
                            android:drawablePadding="3dp"
                            android:hint="Info"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="35dp"
                            android:text="We do not ask for debit/credit card number. Cashiya record you ATM and debit card swipe withdrawals, which you can assign in specific category where you have spent it. " />

                        <ImageView
                            android:id="@+id/add"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/submit"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>
