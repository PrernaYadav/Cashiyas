<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.github.mikephil.charting.charts.BarChart

        android:background="@color/primary"
        android:id="@+id/charttargets"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow
                android:id="@+id/tr1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tvtarget"
                    android:layout_column="0"
                    android:text="Target"
                    android:paddingLeft="7dp"
                    android:layout_width="150dp"
                    android:textColor="#000000"
                    android:background="@drawable/cell_shape"                    >

                </TextView>

                <TextView
                    android:id="@+id/tvtarget1"
                    android:layout_column="1"
                    android:text=""
                    android:layout_width="150dp"
                    android:textColor="#000000"
                    android:paddingLeft="7dp"
                    android:background="@drawable/cell_shape"
                    />

            </TableRow>

            <TableRow
                android:id="@+id/tr2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvincome"
                    android:layout_column="0"
                    android:text="Income"
                    android:layout_width="150dp"
                    android:textColor="#000000"
                    android:paddingLeft="7dp"
                    android:background="@drawable/cell_shape">

                </TextView>

                <TextView
                    android:id="@+id/tvincome1"
                    android:layout_column="1"
                    android:layout_width="150dp"
                    android:textColor="#000000"
                    android:text=""
                    android:paddingLeft="7dp"
                    android:background="@drawable/cell_shape">

                </TextView>

            </TableRow>

            <TableRow
                android:id="@+id/tr3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvsaving"
                    android:layout_column="0"
                    android:layout_width="150dp"
                    android:text="Yearly Savings"
                    android:paddingLeft="7dp"
                    android:background="@drawable/cell_shape"
                    android:textColor="#000000">

                </TextView>

                <TextView
                    android:id="@+id/tvsaving1"
                    android:layout_column="1"
                    android:layout_width="150dp"
                    android:paddingLeft="7dp"
                    android:textColor="#000000"
                    android:background="@drawable/cell_shape"
                    android:text="">

                </TextView>

            </TableRow>

            <TableRow
                android:id="@+id/tr4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvneed"
                    android:layout_column="0"
                    android:layout_width="150dp"
                    android:text="Need to save"
                    android:paddingLeft="7dp"
                    android:background="@drawable/cell_shape"
                    android:textColor="#000000">

                </TextView>

                <TextView
                    android:id="@+id/tvneed1"
                    android:layout_column="1"
                    android:layout_width="150dp"
                    android:paddingLeft="7dp"
                    android:textColor="#000000"
                    android:background="@drawable/cell_shape"
                    android:text="">

                </TextView>

            </TableRow>

        </TableLayout>
    </LinearLayout>
</LinearLayout>